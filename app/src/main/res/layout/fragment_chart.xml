<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="?android:attr/windowBackground"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
                 android:background="?android:attr/windowBackground"
                 android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:id="@+id/data_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_gravity="top|end"
                app:cardBackgroundColor="?attr/data_container_bg_color"
                app:contentPadding="@dimen/padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Sat, Feb 24"
                        android:textSize="@dimen/font_small"/>

                <LinearLayout
                        android:id="@+id/date_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/chat_view_bg_color">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Followers"
                    android:textSize="@dimen/font_large"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_normal"/>

            <com.bitvale.chartview.ChartContainer
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_normal"/>
        </LinearLayout>

    </FrameLayout>

</ScrollView>