<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChartView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="axis_text_color">@color/axis_text_color</item>
        <item name="line_color">@color/lines_color</item>
        <item name="value_fill_color">@color/value_fill_color</item>
        <item name="chart_stroke_width">@dimen/chart_stroke_width</item>
        <item name="chart_min_height">@dimen/chart_min_height</item>
    </style>

    <style name="ChartViewNight" parent="ChartView">
        <item name="axis_text_color">@color/axis_text_color_night</item>
        <item name="line_color">@color/lines_color_night</item>
        <item name="value_fill_color">@color/value_fill_color_night</item>
    </style>

    <style name="ChartSpinner">
        <item name="spinner_height">@dimen/spinner_height</item>
        <item name="frame_color">@color/spinner_frame_color</item>
        <item name="foreground_color">@color/spinner_foreground_color</item>
    </style>

    <style name="ChartSpinnerNight" parent="ChartSpinner">
        <item name="frame_color">@color/spinner_frame_color_night</item>
        <item name="foreground_color">@color/spinner_foreground_color_night</item>
    </style>

    <style name="ChipView">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="strokeColor">@color/color_outline</item>
        <item name="checked_background">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="radius">@dimen/space_small</item>
        <item name="outlineWidth">@dimen/chip_outline_width</item>
    </style>

    <style name="ChipViewNight" parent="ChipView">
        <item name="strokeColor">@color/color_outline_night</item>
        <item name="checked_background">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color_night</item>
    </style>
</resources>